<%- include('components/header', {title: title}) %>
<main>
  <div class="showMessage">
    <div class="messageHeader">
      <h3><%= message.username %></h3>
      <form
        action="/message/<%= message.id %>/delete"
        method="POST"
      >
        <button
          type="submit"
          onclick="return confirm('Are you sure you want to delete this message?');"
          class="button-delete"
        >
          Delete
        </button>
      </form>
    </div>
    <hr />
    <p><%= message.text %></p>
    <p><i class="messageDate"><%= message.added.toDateString() %></i></p>
  </div>
  <a class="backLink" href="/">Back to message board</a>
</main>
<%- include('components/footer') %>
